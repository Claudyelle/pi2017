<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android.usuario.comandavirtual.Tela3">

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="0dp"
        android:layout_height="495dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/pedido_mesa"
                    android:textColor="#000"
                    android:textSize="25sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.504"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />


                <TableLayout
                    android:id="@+id/tableLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="20dp"
                    android:background="@android:color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView3">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="2dp"
                        android:background="#d4ff8e">

                        <TextView
                            android:id="@+id/textViewProduto"
                            android:layout_width="136dp"
                            android:layout_height="wrap_content"
                            android:text="Produto"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="18sp"
                            app:layout_constraintBottom_toTopOf="@+id/tableLayout"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textViewQuantidade"
                            android:layout_width="102dp"
                            android:layout_height="wrap_content"
                            android:text="Quantidade"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="18sp"
                            app:layout_constraintBottom_toTopOf="@+id/tableLayout"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textViewValor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Valor"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="18sp"
                            app:layout_constraintBottom_toTopOf="@+id/tableLayout"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="2dp">

                        <TextView
                            android:id="@+id/textViewProduto1"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2dp"
                            android:background="@android:color/white"
                            android:text="Coca-Cola 2L"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="18sp"
                            app:layout_constraintBottom_toTopOf="@+id/tableLayout"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textViewQuantidade1"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:background="@android:color/white"
                            android:text="1"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="18sp"
                            app:layout_constraintBottom_toTopOf="@+id/tableLayout"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textViewValor1"
                            android:layout_width="110dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2dp"
                            android:background="@android:color/white"
                            android:text="R$ 5.00"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="18sp"
                            app:layout_constraintBottom_toTopOf="@+id/tableLayout"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="2dp">

                        <TextView
                            android:id="@+id/textViewProduto2"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2dp"
                            android:background="@android:color/white"
                            android:text="Suco de Laranja"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="18sp"
                            app:layout_constraintBottom_toTopOf="@+id/tableLayout"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textViewQuantidade2"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:background="@android:color/white"
                            android:text="3"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="18sp"
                            app:layout_constraintBottom_toTopOf="@+id/tableLayout"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textViewValor2"
                            android:layout_width="110dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2dp"
                            android:background="@android:color/white"
                            android:text="R$ 9.00"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="18sp"
                            app:layout_constraintBottom_toTopOf="@+id/tableLayout"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="2dp">

                        <TextView
                            android:id="@+id/textViewProduto3"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2dp"
                            android:background="@android:color/white"
                            android:text="Carne de Sol"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="18sp"
                            app:layout_constraintBottom_toTopOf="@+id/tableLayout"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textViewQuantidade3"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:background="@android:color/white"
                            android:text="1"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="18sp"
                            app:layout_constraintBottom_toTopOf="@+id/tableLayout"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textViewValor3"
                            android:layout_width="110dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2dp"
                            android:background="@android:color/white"
                            android:text="R$ 35.90"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="18sp"
                            app:layout_constraintBottom_toTopOf="@+id/tableLayout"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="2dp">

                        <TextView
                            android:id="@+id/textViewProduto4"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="2dp"
                            android:background="@android:color/white"
                            android:text="Frango Caipira"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="18sp"
                            app:layout_constraintBottom_toTopOf="@+id/tableLayout"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textViewQuantidade4"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:background="@android:color/white"
                            android:text="1"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="18sp"
                            app:layout_constraintBottom_toTopOf="@+id/tableLayout"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/textViewValor4"
                            android:layout_width="110dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2dp"
                            android:background="@android:color/white"
                            android:text="R$ 52.90"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="18sp"
                            app:layout_constraintBottom_toTopOf="@+id/tableLayout"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="2dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/white"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="18sp"
                            app:layout_constraintBottom_toTopOf="@+id/tableLayout"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:text="Total:" />

                        <TextView
                            android:id="@+id/textViewTotal"
                            android:layout_width="96dp"
                            android:layout_height="wrap_content"
                            android:background="@android:color/white"
                            android:text="R$ 120,80"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="18sp"
                            app:layout_constraintBottom_toTopOf="@+id/tableLayout"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="71dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/white" />

                    </TableRow>

                </TableLayout>

                <EditText
                    android:id="@+id/editTextObs"
                    android:layout_width="300dp"
                    android:layout_height="110dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="28dp"
                    android:background="#f5f5f5"
                    android:ems="10"
                    android:hint="Observações:"
                    android:inputType="textMultiLine"
                    android:paddingBottom="70dp"
                    android:paddingLeft="10dp"
                    android:textColorHint="@android:color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

                <Button
                    android:id="@+id/buttonVoltarMesa02"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="8dp"
                    android:background="#39C33F"
                    android:text="Voltar"
                    android:textColor="@android:color/white"
                    android:textSize="17sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editTextObs"
                    app:layout_constraintVertical_bias="0.219" />

                <Button
                    android:id="@+id/buttonFinalizarMesa02"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="8dp"
                    android:background="#39C33F"
                    android:text="Finalizar"
                    android:textColor="@android:color/white"
                    android:textSize="17sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editTextObs"
                    app:layout_constraintVertical_bias="0.219" />

            </android.support.constraint.ConstraintLayout>

        </android.support.constraint.ConstraintLayout>

    </FrameLayout>

</android.support.constraint.ConstraintLayout>
